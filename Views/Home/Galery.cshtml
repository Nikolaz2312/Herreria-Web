@{
  int valorid = 0;
}
<div class="container"> 
 <div class=" row  row-cols-sm-2 row-cols-md-2 row-cols-lg-3   ">
@foreach (var item in @ViewBag.Prod)
{   
   
        
    <div class=" galeria ">

            <div class="card color backg" >
              <figure class="img-fluid">
                 <img class="card-img-top " src="~/imagen/@item.rutaimg" alt="Card image" >
              </figure>
                <div class="card-body">
                    <h4 class="card-title text-light">@item.nombre</h4>
                    @foreach (var item2 in @ViewBag.Cat)
                                {
                                    @if(item.catid == item2.catid){
                                    <p class="card-text text-light">Categoria: @item2.categoria</p>
                                    }
                                }
                    
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#myModal_@item.proid" >Ver mas</button>
                </div>
            </div>   
         </div>  
    <!-- The Modal -->
<div class="modal " id="myModal_@item.proid">
  <div class="modal-dialog ">
    <div class="modal-content backm">

      <!-- Modal Header -->
      <div class="modal-header color backm">
        <h4 class="modal-title">foto</h4>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>

      <!-- Modal body -->
      <div class="modal-body backm">
        <div class="container"><img class="img-fluid" src="~/imagen/@item.rutaimg" alt="Card image" ></div>
         
      </div>

      <!-- Modal footer -->
      <div class="modal-footer color backm">
        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
      </div>

    </div>
  </div>
</div>
    
}
 </div>


</div>